@page "/shelf"
@inject IBookshelfApiClient ApiClient

<section class="card">
    <div class="section-header">
        <h1>Your Shelf</h1>
        <button class="btn" @onclick="LoadAsync">Refresh</button>
    </div>

    @if (_loading)
    {
        <p>Loading shelf...</p>
    }
    else if (_items.Count == 0)
    {
        <p>No books on shelf yet.</p>
    }
    else
    {
        <div class="books-grid">
            @foreach (var item in _items)
            {
                <article class="book-card">
                    <h3>@item.Book.Title</h3>
                    <p class="meta">@string.Join(", ", item.Book.Authors.Select(a => a.Name))</p>
                    <p class="meta">Year: @(item.Book.PublishYear?.ToString() ?? "-")</p>
                    <p class="meta">Rating: @(item.Book.CommunityRating?.ToString("0.0") ?? "-")</p>
                    <p class="meta">Formats: @(item.Book.HasText ? "text" : "") @(item.Book.HasAudio ? " audio" : "")</p>
                    <span class="chip">@item.LibraryItem.Status</span>
                    <div class="book-actions">
                        @if (item.Book.HasText)
                        {
                            <a class="btn btn-link" href="/read/@item.Book.Id">Read</a>
                        }
                        @if (item.Book.HasAudio)
                        {
                            <a class="btn btn-link" href="/listen/@item.Book.Id">Listen</a>
                        }
                    </div>
                </article>
            }
        </div>
    }
</section>

@code {
    private bool _loading;
    private IReadOnlyList<LibraryBookDto> _items = [];

    protected override Task OnInitializedAsync() => LoadAsync();

    private async Task LoadAsync()
    {
        _loading = true;
        _items = await ApiClient.GetLibraryAsync(userId: 1);
        _loading = false;
    }
}
