@page "/history"
@inject IBookshelfApiClient ApiClient

<section class="card">
    <div class="section-header">
        <h1>Reading History</h1>
        <button class="btn" @onclick="LoadAsync">Refresh</button>
    </div>

    @if (_loading)
    {
        <p>Loading history...</p>
    }
    else if (_events.Count == 0)
    {
        <p>No history events yet.</p>
    }
    else
    {
        <table class="history-table">
            <thead>
                <tr>
                    <th>Book Id</th>
                    <th>Format</th>
                    <th>Event</th>
                    <th>Position</th>
                    <th>At (UTC)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var historyEvent in _events)
                {
                    <tr>
                        <td>@historyEvent.BookId</td>
                        <td>@historyEvent.FormatType</td>
                        <td>@historyEvent.EventType</td>
                        <td>@historyEvent.PositionRef</td>
                        <td>@historyEvent.EventAtUtc.ToString("u")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>

@code {
    private bool _loading;
    private IReadOnlyList<HistoryEventDto> _events = [];

    protected override Task OnInitializedAsync() => LoadAsync();

    private async Task LoadAsync()
    {
        _loading = true;
        _events = await ApiClient.GetHistoryAsync(userId: 1);
        _loading = false;
    }
}
