{
  "ConnectionStrings": {
    "Bookshelf": "Host=localhost;Port=5432;Database=bookshelf_dev;Username=bookshelf;Password=bookshelf"
  },
  "FantLab": {
    "Enabled": true,
    "BaseUrl": "https://api.fantlab.ru",
    "SearchPath": "/search",
    "BookDetailsPath": "/work/{bookKey}",
    "TimeoutSeconds": 10,
    "MaxRetries": 2,
    "RetryDelayMs": 300,
    "CacheEnabled": true,
    "SearchCacheMinutes": 10,
    "DetailsCacheHours": 24,
    "CircuitBreakerFailureThreshold": 3,
    "CircuitBreakerOpenSeconds": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
